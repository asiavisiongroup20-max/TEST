  <script>
    // 西暦
    document.getElementById('year').textContent = new Date().getFullYear();
    // 最低限のリビール（JS不要運用でもOKだが、少しだけ動きを加える）
    (function(){
      if(!('IntersectionObserver' in window)){ document.querySelectorAll('.reveal').forEach(el=>el.classList.add('in')); return; }
      const io=new IntersectionObserver(es=>{es.forEach(e=>{if(e.isIntersecting){e.target.classList.add('in'); io.unobserve(e.target);}})},{rootMargin:'-10% 0px'});
      document.querySelectorAll('.reveal').forEach(el=>io.observe(el));
    })();
  </script>
